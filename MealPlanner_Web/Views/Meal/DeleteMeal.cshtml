@model MealPlanner_Web.Models.Dto.MealDTO

<form asp-action="DeleteMeal">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Meal</h1>
        <hr />


        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />

            </div>
            <div class="col-2">
                <label asp-for="URL" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="URL" disabled class="form-control" />

            </div>
            <div class="col-2">
                <label asp-for="Image" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" disabled class="form-control" />

            </div>
            <div class="col-2">
                <label asp-for="HealthRating" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="HealthRating" disabled class="form-control" />

            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexMeal" asp-controller="Meal" class="btn-primary btn form-control">Back To Home</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control " />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

